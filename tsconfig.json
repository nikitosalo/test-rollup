{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "ESNext.AsyncIterable",
      "ESNext.Array",
      "ESNext.Intl",
      "ESNext.Symbol",
      "esnext"
    ],
    "sourceMap": true,
    "module": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react",
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": ["bin"],
  "include": [
    "src"
  ]
}
